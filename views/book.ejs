<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ardent</title>
  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- CSS links -->
  <link rel="stylesheet" href="css/styles.css">
  <!-- font awesome -->
  <script src="https://kit.fontawesome.com/ed7230efcb.js" crossorigin="anonymous"></script>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>
  <div class="navigation-bar">
    <a href="index">
      <h3>Ardent eBook</h3>
    </a>
    <div class="links">
      <a href="about">
        <h6>About</h6>
      </a>
      <a href="book">
        <h6>Books</h6>
      </a>
      <a href="reviews">
        <h6>Reviews</h6>
      </a>
      <a href="contact">
        <h6>Contact</h6>
      </a>
    </div>
    <form class="form-inline" action="/book" method="post">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="searchedBook">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>

  <!-- main content -->
 <% if(searchedBookFound==="true"){ %>
<div class="container">
  <div class="card-deck">
    <div class="row">
    <% books.forEach(function(book){%>
      <div class="col-3">
    <div class="card" >

      <img class="card-img-top" src="data:image/<%=book.book_img.contentType%>;base64,
      <%=book.book_img.data.toString('base64')%>" alt="Card image cap">
      <div class="card-body" >
        <h5 class="card-title"><%= book.book_name %></h5>
        <p class="card-text"><%= book.book_description %></p>
        <h5 class="card-title">Rs.<%= book.book_price %></h5>
        <button class="btn btn-primary">Buy Now</button>
        <button class="btn btn-outline-primary">Add to Cart</button>
      </div>
    </div>
  </div>
    <%})%>
  </div>
  </div>
</div>
<div class="container">
  <div class="card-deck">
    <div class="row">
    <% books.forEach(function(book){%>
      <div class="col-3">
    <div class="card" >
      <img class="card-img-top" src="data:image/<%=book.book_img.contentType%>;base64,
      <%=book.book_img.data.toString('base64')%>" alt="Card image cap">
      <div class="card-body" >
        <h5 class="card-title"><%= book.book_name %></h5>
        <p class="card-text"><%= book.book_description %></p>
        <h5 class="card-title">Rs.<%= book.book_price %></h5>
        <button class="btn btn-primary">Buy Now</button>
        <button class="btn btn-outline-primary">Add to Cart</button>
      </div>
    </div>
  </div>
    <%})%>
  </div>
  </div>
</div>
<% } %>
<% if(searchedBookFound==="false"){ %>
  <div class="alert alert-danger">
    Not found
  </div>
<% } %>
  <%- include("./footer"); %>
</body>

</html>